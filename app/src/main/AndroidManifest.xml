<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.keyboardr.bluejay">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.keyboardr.bluejay.util.AlbumArtGlideModule"
            android:value="GlideModule"/>

        <activity
            android:name=".PlaybackActivity"
            android:configChanges="keyboard|keyboardHidden"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.EditShortlistsActivity"/>

        <service
            android:name=".service.PlaylistMediaService"
            android:enabled="true"
            android:exported="true"
            android:process=":playlist">
            <intent-filter>
                <action android:name="android.media.browse.MediaBrowserService"/>
            </intent-filter>
        </service>

        <provider
            android:name=".provider.BluejayProvider"
            android:authorities="@string/authority"
            android:exported="false"/>
    </application>

</manifest>