<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/new_shortlist_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#555555"
    android:elevation="2dp"
    android:paddingTop="4dp"
    tools:showIn="@layout/fragment_shortlist_editor">

    <ImageView
        android:id="@+id/add_shortlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:padding="8dp"
        android:src="@drawable/ic_add"
        android:tint="?android:attr/textColorPrimary"
        android:tintMode="src_in"
        android:background="?selectableItemBackgroundBorderless"
        tools:enabled="false"/>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/new_shortlist_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/new_shortlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/new_shortlist"
            android:imeOptions="actionDone"
            android:inputType="textCapWords"
            android:minWidth="100dp"
            tools:text="Foo"/>

    </android.support.design.widget.TextInputLayout>

</LinearLayout>