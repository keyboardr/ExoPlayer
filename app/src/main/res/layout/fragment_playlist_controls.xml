<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/controls_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    tools:context="com.keyboardr.dancedj.ui.monitor.LibraryFragment">

    <TextView
        android:id="@+id/controls_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:maxLines="1"
        android:textAppearance="?android:textAppearanceLarge"
        android:visibility="invisible"
        app:layout_constraintLeft_toRightOf="@+id/controls_album_art"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/controls_album_art"
        tools:text="Song Name"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/controls_artist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:maxLines="1"
        android:textAppearance="?android:textAppearanceMedium"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="@+id/controls_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/controls_title"
        tools:text="Artist Name"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/controls_album_art"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/album_art_outline"
        android:visibility="invisible"
        app:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/controls_spinner"
        tools:src="@mipmap/ic_launcher"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/controls_play_pause"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="?android:selectableItemBackgroundBorderless"
        android:padding="8dp"
        android:src="@drawable/ic_play_arrow"
        android:tint="?android:colorControlNormal"
        android:tintMode="src_in"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/controls_album_art"
        tools:visibility="visible" />

    <ProgressBar
        android:id="@+id/controls_seek"
        style="?android:progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:indeterminate="false"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/controls_play_pause"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/controls_play_pause"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/controls_play_pause"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/controls_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@id/controls_seek"
        app:layout_constraintTop_toBottomOf="@+id/controls_seek"
        tools:layout_editor_absoluteX="357dp"
        tools:text="3:15"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/controls_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@id/controls_seek"
        app:layout_constraintTop_toBottomOf="@+id/controls_seek"
        tools:layout_editor_absoluteX="48dp"
        tools:text="0:15"
        tools:visibility="visible" />

    <Spinner
        android:id="@+id/controls_spinner"
        android:layout_width="0dp"
        android:layout_height="48dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="0dp" />
</android.support.constraint.ConstraintLayout>
