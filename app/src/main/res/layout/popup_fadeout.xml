<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="wrap_content"
                                             android:layout_height="wrap_content"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:animateLayoutChanges="true">

    <ImageView
        android:id="@+id/skipIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        app:layout_goneMarginBottom="16dp"
        android:background="?selectableItemBackgroundBorderless"
        android:clickable="false"
        android:src="@drawable/ic_skip_next"
        android:tint="@android:color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/cancel"/>

    <com.keyboardr.bluejay.ui.Slider
        android:id="@+id/fader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:max="100"
        android:minWidth="200dp"
        android:minHeight="36dp"
        android:progress="100"
        app:layout_constraintBottom_toBottomOf="@id/skipIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/skipIcon"
        app:layout_constraintTop_toTopOf="@+id/skipIcon"/>

    <TextView
        android:id="@+id/cancel"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@android:string/cancel"
        tools:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/skipIcon"/>
</android.support.constraint.ConstraintLayout>