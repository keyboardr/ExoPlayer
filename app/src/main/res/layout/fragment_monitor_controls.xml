<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/monitor_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.keyboardr.dancedj.LibraryFragment">

    <TextView
        android:id="@+id/monitor_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceLarge"
        tools:text="Song Name"
        app:layout_constraintLeft_toRightOf="@+id/monitor_album_art"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/monitor_album_art"
        app:layout_constraintRight_toRightOf="@+id/monitor_layout" />

    <TextView
        android:id="@+id/monitor_artist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceMedium"
        tools:text="Artist Name"
        app:layout_constraintLeft_toLeftOf="@+id/monitor_title"
        app:layout_constraintTop_toBottomOf="@+id/monitor_title"
        android:layout_marginTop="4dp"
        app:layout_constraintRight_toRightOf="@+id/monitor_layout" />

    <ImageView
        android:id="@+id/monitor_album_art"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintLeft_creator="1"
        app:layout_constraintTop_creator="1"
        tools:src="@mipmap/ic_launcher"
        app:layout_constraintLeft_toLeftOf="@+id/monitor_layout"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/monitor_layout"
        tools:layout_constraintTop_creator="1" />

    <ImageView
        android:id="@+id/monitor_play_pause"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?android:selectableItemBackgroundBorderless"
        android:padding="8dp"
        android:src="@drawable/ic_play_arrow"
        app:layout_constraintLeft_toLeftOf="@+id/monitor_layout"
        app:layout_constraintTop_toBottomOf="@+id/monitor_album_art"
        android:layout_marginTop="8dp" />

    <SeekBar
        android:id="@+id/monitor_seek"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintLeft_toRightOf="@+id/monitor_play_pause"
        app:layout_constraintTop_toTopOf="@+id/monitor_play_pause"
        app:layout_constraintRight_toRightOf="@+id/monitor_layout"
        app:layout_constraintBottom_toBottomOf="@+id/monitor_play_pause"
        app:layout_constraintHorizontal_bias="1.0" />
</android.support.constraint.ConstraintLayout>
