<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/playlist"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.keyboardr.bluejay.PlaybackActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:colorBackgroundFloating"
        android:elevation="@dimen/controls_elevation">

        <fragment
            android:id="@+id/playlist_control_fragment"
            android:name="com.keyboardr.bluejay.ui.playlist.PlaylistControlsFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_playlist_controls" />
    </FrameLayout>

    <fragment
        android:id="@+id/playlist_fragment"
        android:name="com.keyboardr.bluejay.ui.playlist.PlaylistFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>