<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v7.widget.RecyclerView
        android:id="@+id/shortlists"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
        android:paddingStart="?android:attr/listPreferredItemPaddingStart"
        android:paddingTop="8dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:listitem="@layout/item_shortlist"/>

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:colorPrimary"
        android:orientation="vertical"
        android:outlineProvider="none"
        app:expanded="true">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:paddingTop="16dp"
            app:layout_scrollFlags="scroll">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@+id/sort"
                android:text="@string/title_sort"/>

            <Spinner
                android:id="@+id/sort"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_row="0"
                android:entries="@array/sort_methods"
                android:padding="8dp"/>

            <ToggleButton
                android:id="@+id/sort_direction"
                android:layout_column="2"
                android:layout_row="0"
                android:background="?android:selectableItemBackgroundBorderless"
                android:button="@drawable/asl_down_up_shuffle"
                android:gravity="center_vertical|start"
                android:textOff="@string/down"
                android:textOn="@string/up"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:labelFor="@+id/filter_text"
                android:text="@string/title_filter"/>

            <!-- Dummy view to keep EditText from getting focus on start -->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:focusable="true"
                android:focusableInTouchMode="true"/>

            <!-- drawableEnd is added to ensure text doesn't overrun the clear button -->
            <EditText
                android:id="@+id/filter_text"
                android:layout_width="0dp"
                android:layout_column="1"
                android:layout_columnSpan="2"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:drawableTint="@android:color/transparent"
                android:inputType="text"
                android:nextFocusLeft="@+id/sort"
                android:nextFocusUp="@+id/sort"
                tools:drawableEnd="@drawable/ic_close"
                tools:text="This is really really long text and I'm trying to get it to wrap or fall off or something"/>

            <ImageView
                android:id="@+id/filter_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnSpan="2"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="4dp"
                android:layout_row="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_close"
                android:tint="?android:colorForeground"
                android:tintMode="src_in"/>
        </GridLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/shortlists_label"
            app:layout_scrollFlags="snap"
            tools:ignore="RtlSymmetry"/>
    </android.support.design.widget.AppBarLayout>
</android.support.design.widget.CoordinatorLayout>
