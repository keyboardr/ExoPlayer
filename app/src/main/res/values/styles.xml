<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="dialogTheme">@style/Theme.AppCompat.Dialog.MinWidth</item>
    </style>

    <style name="ThemeOverlay.AppCompat.Dialog.MinWidth">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
    </style>

    <style name="BottomNavTab">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:drawableTint">@color/nav_tab_foreground</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:textColor">@color/nav_tab_foreground</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lines">1</item>
    </style>

    <style name="BottomNavBackground">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:tint">@color/bottomNavScrim</item>
        <item name="android:tintMode">src_atop</item>
    </style>

</resources>
